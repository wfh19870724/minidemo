.mask {
    background: rgba(0,0,0,0.5);
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;
}

.bind-account {
    background-color: #fff;
    position: fixed;
    width: 480rpx;
    top: 200rpx;
    left: 95rpx;
    padding: 40rpx;
    border-radius: 20rpx;
    z-index: 10;
}

.close-bind {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.tit {
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 80rpx;
}

.bind-ipt {
    border: 1rpx solid #eee;
    height: 80rpx;
    border-radius: 40rpx;
    margin-bottom: 24rpx;
    font-size: 28rpx;
    line-height: 80rpx;
}

.wy-btn {
    display: block;
}

.bind-mobile {
    height: 80rpx;
    padding-left: 30rpx;
}

.bind-code {
    width: 200rpx;
    height: 80rpx;
    padding-left: 30rpx;
    vertical-align: middle;
    float: left;
}

.send-code {
    height: 80rpx;
    color: #999;
    float: right;
    padding-right: 30rpx;
}

.can-send {
    color: #3f86ff;
}

.error-tip {
    height: 48rpx;
    line-height: 48rpx;
    background-color: #fe3824;
    color: #fff;
    position: absolute;
    width: 560rpx;
    left: 0;
    top: 87rpx;
    text-align: center;
}

.dialog-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
}

.dialog-info {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.dialog-title {
    font-size: 36rpx;
    padding: 30rpx 30rpx 10rpx;
}

.dialog-content {
    padding: 10rpx 30rpx 20rpx;
    min-height: 80rpx;
    font-size: 32rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.dialog-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 90rpx;
    font-size: 34rpx;
}

.dialog-btn {
    display: block;
    flex: 1;
    position: relative;
    color: #3CC51F;
}