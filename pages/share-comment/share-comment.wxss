page {
    padding-bottom: 200rpx;
}

.comment {
    background: #fff;
    padding: 40rpx 0 20rpx 0;
    margin-bottom: 20rpx;
}

.doctor-photo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
}

.text-line {
    display: block;
    text-align: center;
    line-height: 60rpx;
}

.star-group {
    display: flex;
    justify-content: center;
}

.star {
    background: url("data:image/png;base64,") no-repeat;
    background-position: 0 0;
    background-size: 162rpx 78rpx;
    width: 81rpx;
    height: 78rpx;
    margin: 0 10rpx 20rpx 10rpx;
}

.star.gray {
    background-position: -86rpx 0;
}

textarea {
    margin: 20rpx;
    border: 1rpx solid rgb(238,238,238);
    padding: 30rpx;
    width: 648rpx;
    height: 300rpx;
}

.tag-line {
    background: #fff;
    padding: 25rpx;
    line-height: 50rpx;
    border-top: 1rpx solid rgb(238,238,238);
}

.tag {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    float: right;
    text-align: center;
    border-radius: 50rpx;
    border: 1rpx solid rgb(246,127,59);
    color: rgb(246,127,59);
    margin-right: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.tag.gray {
    border: 1rpx solid rgb(238,238,238);
    color: rgb(114,114,114);
}

.btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgb(63,134,255);
    color: #fff;
    z-index: 2;
}

.tag-group {
    display: flex;
    padding: 30rpx 100rpx;
    flex-wrap: wrap;
}

.tag-group .tag {
    margin: 10rpx;
    width: 160rpx;
}

.chose-disease {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 800rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
    padding-top: 25rpx;
}

.chose-disease .search:before {
    background-image: url("data:image/png;base64,");
    background-size: cover;
    content: '';
    display: block;
    position: absolute;
    left: 12rpx;
    top: 9rpx;
    width: 40rpx;
    height: 40rpx;
}

.chose-disease .title {
    text-align: center;
    line-height: 60rpx;
}

.chose-disease .search {
    width: 700rpx;
    height: 60rpx;
    margin: 0 auto;
    background: rgb(248,248,248);
    border-radius: 50rpx;
    position: relative;
}

.chose-disease .search input {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 60rpx;
    width: 600rpx;
}

.chose-disease .search-list {
    width: 750rpx;
    height: 630rpx;
    margin-top: 20rpx;
}

.chose-disease .search-item {
    line-height: 80rpx;
    padding-left: 40rpx;
    border-top: 1rpx solid rgb(247,247,247);
    color: rgb(96,96,96);
}

.chose-disease .search-item:last-child {
    border-bottom: 1rpx solid rgb(247,247,247);
}

.modal-group {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    z-index: 2;
}

.content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgb(248,248,248);
}