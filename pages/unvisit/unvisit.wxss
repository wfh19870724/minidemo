.radio-group {
    background-color: #fff;
    margin-top: 15rpx;
    border-top: 1rpx solid #eee;
}

.radio {
    display: block;
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 20rpx;
}

.radio-text {
    float: left;
    margin-top: 12rpx;
    font-size: 26rpx;
}

.radio-check {
    float: right;
}

.textarea {
    background-color: #fff;
    padding: 20rpx;
    height: 200rpx;
    width: 710rpx;
    margin-bottom: 20rpx;
}

.operate-warp {
    height: 100rpx;
}

.submit-btn {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #3f86ff;
    color: #fff;
    text-align: center;
    width: 750rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    border-radius: 0;
}

.tip {
    padding: 0 20rpx;
    line-height: 40rpx;
    color: #999;
}