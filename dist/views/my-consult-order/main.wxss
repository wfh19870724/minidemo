@import "../../../__wuBaseWxss__/0.wxss";

.consult-order--item {
    margin-top: 16rpx;
    background: #fff;
    border-top: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
}

.consult-order--item-hd {
    display: flex;
    align-items: center;
    height: 80rpx;
    padding: 0 24rpx;
    border-bottom: 2rpx solid #eee;
}

.consult-order--item-hd .avatar {
    width: 56rpx;
    height: 56rpx;
    margin-right: 16rpx;
}

.consult-order--item-hd .avatar ._img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: middle;
}

.consult-order--item-hd .name {
    color: #28354C;
    margin-right: 20rpx;
}

.consult-order--item-hd .meta {
    color: #a6a8b6;
}

.consult-order--item-hd .status {
    margin-left: auto;
    color: #C4C5CE;
}

.consult-order--item-hd .finish {
    color: #FF695C;
}

.consult-order--item-bd {
    min-height: 120rpx;
    padding: 32rpx 24rpx;
    border-bottom: 2rpx solid #eee;
    line-height: 44rpx;
    font-size: 28rpx;
    color: #28354C;
}

.consult-order--item-ft {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    height: 80rpx;
    color: #83889A;
}

.consult-order--item-ft .date {
    margin-right: 20rpx;
}

.consult-order--item-ft .comment-btn {
    width: 120rpx;
    height: 48rpx;
    line-height: 48rpx;
    background-color: #3F86FF;
    border-radius: 24rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}